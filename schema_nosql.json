{
  "description": "JSON Data Model for User Profile Storage",
  "fields": {
    "memberId": {
      "type": "String",
      "description": "Unique identifier generated by custom logic",
      "constraints": "Primary Key"
    },
    "fullName": {
      "type": "String",
      "constraints": "Required"
    },
    "mobile": {
      "type": "String",
      "constraints": "Required, Unique Index"
    },
    "email": {
      "type": "String",
      "constraints": "Optional"
    },
    "dob": {
      "type": "Date/String",
      "format": "YYYY-MM-DD",
      "constraints": "Required"
    },
    "village": {
      "type": "String",
      "constraints": "Required"
    },
    "nid": {
      "type": "String",
      "constraints": "Optional"
    },
    "password": {
      "type": "String",
      "description": "Store as hashed value (e.g. BCrypt)",
      "constraints": "Required"
    },
    "createdAt": {
      "type": "ISO8601 Timestamp",
      "default": "current_timestamp"
    },
    "status": {
      "type": "String",
      "options": ["active", "suspended"],
      "default": "active"
    }
  }
}